@page
@model KoiFarmShop.WebApplication.Pages.dangModel
@{
    Layout = null;
    ViewData["Title"] = "Đăng Ký - KoiFarm";
}

<!DOCTYPE HTML>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background: url('img/video.gif') no-repeat center center fixed;
            background-size: cover;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            color: #fff;
        }

        .signup-container {
            background: rgba(0, 0, 0, 0.6);
            padding: 40px;
            width: 300px;
            border-radius: 10px;
            text-align: center;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

            .signup-container h1 {
                margin-bottom: 20px;
                font-size: 24px;
            }

            .signup-container input[type="text"],
            .signup-container input[type="password"],
            .signup-container input[type="email"] {
                width: 100%;
                padding: 10px;
                margin: 10px 0;
                border: none;
                border-radius: 5px;
                outline: none;
            }

            .signup-container input[type="submit"] {
                width: 100%;
                padding: 10px;
                background-color: #ff0055;
                border: none;
                border-radius: 5px;
                color: #fff;
                font-size: 16px;
                cursor: pointer;
                margin-top: 20px;
            }

                .signup-container input[type="submit"]:hover {
                    background-color: #ff3366;
                }

        .error-message {
            color: red;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="signup-container">
        <h1>Đăng Ký Tài Khoản</h1>
        <form method="post">
            <input type="text" name="Username" placeholder="Tên người dùng" value="@Model.Username" required>
            <input type="email" name="Email" placeholder="Email" value="@Model.Email" required>
            <input type="password" name="Password" placeholder="Mật khẩu" required>
            <input type="password" name="ConfirmPassword" placeholder="Xác nhận mật khẩu" required>
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="error-message">@Model.ErrorMessage</div>
            }
            <input type="submit" value="Đăng ký">
        </form>
    </div>
</body>
</html>
